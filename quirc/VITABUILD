pkgname=quirc
pkgver=v1.0
pkgrel=1
url="https://github.com/dlbeer/quirc/"
source=("https://github.com/dlbeer/quirc/archive/${pkgver}.tar.gz")
sha256sums=('SKIP')

build() {
  cd $pkgver
  mkdir build && cd build
  cp ../../Makefile ./Makefile
  make
}

package () {
  cd ${pkgver}/build
  make DESTDIR=$pkgdir install
}
