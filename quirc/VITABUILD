pkgname=quirc
pkgver=1.0
pkgrel=1
url="https://github.com/dlbeer/quirc/"
source=("https://github.com/dlbeer/quirc/archive/v1.0.tar.gz")
sha256sums=('SKIP')

build() {
  cd $pkgname-$pkgver
  mkdir build && cd build
  cp ../../Makefile ./Makefile
  make
}

package () {
  cd $pkgname-$pkgver/build
  make DESTDIR=$pkgdir install
}
